<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tools.view.ChoosePatternActivity">

    <com.hd.tools.custom.BackgroundVideoView
        android:id="@+id/bgVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v4.widget.Space style="@style/choose_pattern_space_style"/>

        <Button
            style="@style/choose_pattern_button_style"
            android:onClick="measureSerial"
            android:text="串口设备测量"/>

        <android.support.v4.widget.Space style="@style/choose_pattern_space_style"/>

        <Button
            style="@style/choose_pattern_button_style"
            android:onClick="measureUsb"
            android:text="usb转串设备测量"/>

        <android.support.v4.widget.Space style="@style/choose_pattern_space_style"/>
    </LinearLayout>
</FrameLayout>
